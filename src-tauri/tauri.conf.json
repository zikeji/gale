{
	"productName": "Gale",
	"version": "1.5.10",
	"identifier": "com.kesomannen.gale",
	"build": {
		"beforeBuildCommand": "npm run build",
		"beforeDevCommand": "npm run dev",
		"frontendDist": "../build",
		"devUrl": "http://localhost:5173"
	},
	"bundle": {
		"active": true,
		"category": "Game",
		"copyright": "",
		"targets": "all",
		"externalBin": [],
		"createUpdaterArtifacts": true,
		"shortDescription": "A lightweight mod manager for Thunderstore",
		"longDescription": "",
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		],
		"windows": {
			"certificateThumbprint": null,
			"digestAlgorithm": "sha256",
			"timestampUrl": ""
		},
		"linux": {
			"deb": {
				"depends": []
			}
		},
		"resources": [],
		"fileAssociations": [
			{
				"ext": ["r2z"],
				"mimeType": "application/zip"
			}
		]
	},
	"plugins": {
		"updater": {
			"pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDhCRDIxNDhDQzRGQzMzQzQKUldURU0vekVqQlRTaStEK3lQYkRycHprWU5TYjFUMjl3c0JtZ1RFRjRlK1FtR1BxZUo0VzdXbU4K",
			"endpoints": [
				"https://gist.githubusercontent.com/zikeji/8a656e373b773c41785acdca8b432dcb/raw/"
			]
		},
		"deep-link": {
			"desktop": {
				"schemes": ["ror2mm"]
			},
			"mobile": []
		}
	},
	"app": {
		"windows": [
			{
				"decorations": false,
				"fullscreen": false,
				"transparent": true,
				"resizable": true,
				"title": "Gale",
				"width": 900,
				"height": 700,
				"minWidth": 800,
				"minHeight": 600,
				"dragDropEnabled": false
			}
		],
		"security": {
			"csp": "default-src * ipc: http://ipc.localhost; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; script-src 'self'; font-src https://fonts.gstatic.com",
			"assetProtocol": {
				"enable": true,
				"scope": ["**"]
			}
		}
	}
}
